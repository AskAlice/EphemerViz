{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@server/*": ["server/src/*"],
      "@client/*": ["client/src/*"]
    }
  }
}
